		"@packtrack/train": "file:../train",
		"serialport": "^13.0.0",
		"skia-canvas": "^2.0.1",
		"xmldom": "^0.6.0"
	},
	"devDependencies": {
		"@types/node": "^20.17.12",
		"esbuild": "^0.21.4",
		"typescript": "^5.3.3"
